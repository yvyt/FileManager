<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>General</title>

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    
    <!-- ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <link rel="stylesheet" href="/stylesheets/styleBuyStorage.css">
</head>
<body>
    <!-- header -->

<div class="header">
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <div class="navbar-brand">
                <a class="navbar-brand ps-3 me-0 me-lg-2" href="#">
                    <img src="/images/logo.png" alt="logo" width="50" />
                    <a href="/" class="logo">DriveForYou</a>
                </a>
            </div>

            <div class="collapse navbar-collapse">
                <form class="d-flex justify-content-center w-50" role="search">
                    <input class="form-control me-2 w-100" type="search" placeholder="Search" aria-label="Search" />
                    <button class="btn w-auto" type="submit">Search</button>
                </form>

                <div class="d-flex justify-content-end ps-5 w-auto">
                    {{#if us}}
                    <a href="#" class="me-1">{{us.name}}</a>
                    <label class="text-white"> | </label>
                    <a href="/logout" class="ms-1">Log out</a>
                    {{/if}}
                    {{#else}}
                    <a href="/login" class="me-1">Login</a>
                    <label class="text-white"> | </label>
                    <a href="/login" class="ms-1">Sign up</a>
                    {{/else}}
                </div>
            </div>
        </div>
    </nav>
</div>

    <!-- content -->
    <div class="buy-storage">
        <div class="container">
            <h3>Mua dung lượng</h3>
            <div class="content">
                <form action="/upgrade" method="POST">
                    <div class="personal-info">
                        <input type="hidden">
                        <div class="input-box">
                            <label for="name" class="form-label">Họ và tên</label>
                            <input type="text" class="form-control" placeholder="Vui nhập họ và tên" id="name" name="name" required>
                        </div>
                        <div class="input-box">
                            <label for="phone" class="form-label">Số điện thoại</label>
                            <input type="text" class="form-control" placeholder="Vui nhập số điện thoại" id="phone" name="phone" required>
                        </div>
                        <div class="input-box">
                            <label for="email" class="form-label">Email</label>
                            {{#if us}}
                                <input type="text" class="form-control" placeholder="Vui nhập email" id="email" name="email" value="{{us.email}}">
                            {{/if}}
                        </div>
                    </div>

                    <label class="form-label">Gói dung lượng</label>
                    <select class="form-select" id="type_storage" aria-label="Default select example" onclick="showPrice()" name="package">
                        <option selected value="0">200MB</option>
                        <option value="1">500MB</option>
                        <option value="2">1GB</option>
                    </select>

                    <label>Giá tiền: <span id="price" class="text text-white">200,000 VND</span> </label>
                    <input type="hidden" id="priceData" name="priceData" value="200000">
                    <br>

                    <h3>Thanh Toán</h3>
                    <div class="credit-info">
                        <div class="input-box">
                            <label for="card_name" class="form-label">Tên chủ thẻ</label>
                            <input type="text" class="form-control" placeholder="Vui lòng nhập tên chủ thẻ" id="card_name" required name="name_card">
                        </div>
                        <div class="input-box">
                            <label for="card_num" class="form-label">Số thẻ tín dụng</label>
                            <input type="text" class="form-control" placeholder="Vui lòng nhập số thẻ" id="card_num" required name="number_card">
                        </div>
                        <div class="input-box">
                            <label for="cvv" class="form-label">CVV/CVC</label>
                            <input type="text" class="form-control" placeholder="Vui lòng nhập mã CVV/CVC" id="cvv" required name="cvv">
                        </div>
                        <div class="valid">
                            <div class="input-box w-50 me-5">
                                <label for="member_since" class="form-label">Hiệu lực từ</label>
                                <input type="date" class="form-control" placeholder="Member Since" id="valid_thru" required name="beginDate">
                            </div>
                            <div class="input-box w-50">
                                <label for="valid_thru" class="form-label">Đến</label>
                                <input type="date" class="form-control" placeholder="Valid Thru" id="valid_thru" required name="endDate">
                            </div>
                        </div>
                    </div>
                    <br>
                    <br>
                    {{#if msg}}
                        <div class="alert alert-danger">
                            {{msg}}
                        </div>
                    {{/if}}
                    
                    <button type="submit">
                        <p>Thanh toán <ion-icon name="card-outline"></ion-icon></p>
                    </button>
                </form>
                
            </div>
        </div>
    </div>

    <!-- footer -->
    <div class="footer d-flex justify-content-center" style="height: 200px;">
        <div class="container-fluid" style="display: contents;">
            <div class="row">
                <a href="" class="d-flex justify-content-center">
                    <img src="/images/logo.jpg" alt=""width="50"/>
                </a>
                <br/>
                <p class="d-flex justify-content-center align-item-center">Copyright © Your Website 2023</p>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    function showPrice() {
        var goi = document.getElementById("type_storage").value;
        if (goi == 0) {
            document.getElementById("price").textContent = "200,000 VND";
            document.getElementById("priceData").value = "200000";

        } else if (goi == 1) {
            document.getElementById("price").textContent = "400,000 VND";
            document.getElementById("priceData").value = "400000";
        } else {
            document.getElementById("price").textContent = "550,000 VND";
            document.getElementById("priceData").value = "550000";
        }
    }
</script>

</html>