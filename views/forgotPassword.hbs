<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,600,0,0"
    />
    <link rel="stylesheet" href="/stylesheets/styleForgotAndResetPW.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="login-card-container">
      <div class="login-card">
        <div class="login-card-header">
          <h1>Retrieve password</h1>
        </div>
        <form class="login-card-form form--forgotpassword">
          <div class="form-item">
            <span class="form-item-icon material-symbols-rounded">mail</span>
            <input
              type="text"
              placeholder="Enter Email"
              id="emailForm"
              autofocus
              required
            />
          </div>
          {{! <div class="form-item">
            <span class="form-item-icon material-symbols-rounded">lock</span>
            <input
              type="password"
              placeholder="Enter the confirmation code"
              id="passwordForm"
              required
            />
          </div> }}
          <button type="submit" id="btn-submit">Confirm</button>
        </form>
        <div class="container-error container-error__forgotpassword"></div>
        <div class="login-card-footer">

          <div class="icon"><ion-icon
              name="arrow-back-outline"
            ></ion-icon></div>
          <a href="/login">Back</a>
        </div>
      </div>
    </div>
    <script src="js/bundle.js"></script>
  </body>
</html>