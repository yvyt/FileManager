<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/d5237ee958.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/styleShareFile.css" />

    

    <title>Share File</title>
</head>
<body>
    <!-- ***** Header-Start ***** -->
    <header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <!-- <ul class="logo" style=" margin-left: 3%;">
                        <li>
                                <a href="index.html" class="logo" >
                                <img src="images/cloud1.png"alt=""> 
                            </a>
                        </li>
                        <li>
                            <a href="index.html" class="logo" style="    margin-left: 15%;"> DriveForYou</a>
                        </li>

                    </ul> -->
                    <a href="/" class="logo" >
                        <img src="/images/cloud1.png"alt=""> </a>
                    

                    <!-- ***** Logo End ***** -->
                    <!-- ***** Search End ***** -->
                    <div class="search-input">
                      <form id="search" action="#">
                        <input type="text" placeholder="Tìm kiếm" id='searchText' name="searchKeyword" />
                        <i class="fa fa-search"></i>
                      </form>
                    </div>
                    <!-- ***** Search End ***** -->
                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                        <li><a href="/recent">Recent</a></li>
                        <li><a href="/star">Star</a></li>
                        <li>
                          {{#if us}}
                            <a href="#" class="me-1">{{us.name}}</a>
                          {{/if}}
                        </li>
                        <li>
                          <a href="/logout" class="me-1">Log out</a>
                        </li>
                    </ul>   
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
  </header>
  <!-- ***** Header-End ***** -->
   <!-- ***** body-share-file ***** -->
   <!-- ***** Header Area End ***** -->

  <div class="container" id="body-share-file">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">

          <!-- ***** Banner Start ***** -->
          <div class="main-banner">
            <div class="row">
              <div class="col-lg-7">
                <div class="header-text">
                  <h6>Welcome to DriveForYou</h6>
                  <h4><em>File </em> Share</h4>
                  <div class="main-button">
                    <a href="/">Home</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- ***** Banner End ***** -->

          <!-- ***** File Shared - Start***** -->
          <div class="file-share">
            <div class="row">
              <div class="col-lg-12">
                <div class="heading-section">
                  <h2><em>File you receive</em></h2>
                </div>
                <div class="row">
                    {{#if filesReceive}}
                      {{#each filesReceive}}
                        <div class="col-lg-3 col-md-3 col-sm-6" style="width: 160px;height:160px">
                          <div class="item" >
                            {{#if isImage}}
                              <img src=".\.{{image}}" alt="" style="width: 160px;height:160px" />
                            {{else}}
                              <img src="{{image}}" alt="" style="width: 160px;height:160px" />
                            {{/if}}
                            <div style="display: flex;margin: 10px;">
                              <br>
                              <span style="text-align: center; color:white;margin-right:10px">{{name}}</span>
                              <a href="/downloadFile/{{_id}}" style="margin-top: 10px; color:yellow;margin-right:10px"><ion-icon
                                  name="cloud-download-outline"></ion-icon></a>
                              <br>
                              <br>
                              <a href="/report/{{_id}}"><ion-icon name="alert-circle-outline" style="margin-top: 10px; color:yellow"></ion-icon></a>
                            </div>
                          </div>
                        </div>
                      {{/each}}
                    {{/if}}        
                </div>
              </div>
               
            </div>
          </div>
          <br>
          <br>
          <br>
          <br>
          <br>
        <!-- ***** File Shared - End ***** -->
        <!-- ***** File Share recent - Start ***** -->
          <div class="file-share">
            <div class="row">
              <div class="col-lg-12">
                <div class="heading-section">
                  <h2><em>File you share</em></h2>
                </div>
                <div class="row">
                  {{#if filesShare}}
                  {{#each filesShare}}
                  <div class="col-lg-3 col-md-3 col-sm-6" style="width: 160px;height:160px">
                    <div class="item">
                      {{#if isImage}}
                      <img src=".\.{{image}}" alt="" style="width: 160px;height:160px" />
                      {{else}}
                      <img src="{{image}}" alt="" style="width: 160px;height:160px" />
                      {{/if}}
                      <div style="display: flex;margin: 10px;">
                        <br>
                        <span style="text-align: center; color:white;margin-right:10px">{{name}}</span>
                      </div>
                    </div>
                  </div>
                  {{/each}}
                  {{/if}}
                </div>
              </div>
          
            </div>
          </div>
          <!-- ***** File Share recent - End***** -->

           
    


<script src="/js/script.js"></script>

</body>
</html>